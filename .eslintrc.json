{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "no-restricted-imports": [
      "warn",
      {
        "patterns": [
          {
            "group": [
              "../../**",
              "../../../**",
              "../../../../**",
              "../../../../../**"
            ],
            "message": "Use @/ alias instead of deep relative imports"
          }
        ]
      }
    ]
  }
}